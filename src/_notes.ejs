		<section id="notes" class="p-portfolio__section p-portfolio__notes" data-scroll-trigger>
			<div class="l-container">
				<div class="u-text-center u-mb-16">
					<h2 class="p-portfolio__section-title" data-text-scramble data-text="Tech Notes">Tech Notes</h2>
				</div>
				<div class="l-grid l-grid--cols-3">
					<% if (typeof portfolio !== 'undefined' && portfolio.notes && portfolio.notes.length > 0) { %>
						<% portfolio.notes.forEach(function(note) { %>
							<%
								const title = note.data['.p-portfolio__note-title'] || '';
								const text = note.data['.p-portfolio__note-text'] || '';
							%>
							<% if (title || text) { %>
								<article class="p-portfolio__note-card">
									<% if (title) { %>
										<h3 class="p-portfolio__note-title"><%= title %></h3>
									<% } %>
									<% if (text) { %>
										<p class="p-portfolio__note-text">
											<%
												const textLines = Array.isArray(text)
													? text
													: [text];
												// 最初の要素に<br>が含まれているかチェック（<br>|形式かどうか）
												const hasBrTag = textLines.length > 0 && textLines[0].includes('<br>');
												textLines.forEach(function(line, index) {
													// <br>|形式の場合は追加の<br>を挿入しない
													if (index > 0 && !hasBrTag) { %><br><% }
													%><%- line %><%
												});
											%>
										</p>
									<% } %>
								</article>
							<% } %>
						<% }); %>
					<% } %>
				</div>
			</div>
		</section>
